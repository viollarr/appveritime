<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"> 
    <item
        android:state_selected="false"
       android:state_pressed="false">
        <shape>
              <gradient
              android:startColor="#f1a1aa"
              android:endColor="#de8a94"
              android:angle="270" />
        </shape>
   </item>  
   <item
       android:state_pressed="true">
         <shape>
          <gradient
              android:startColor="#eb7b88"
              android:endColor="#d15b69"
              android:angle="270" />
        </shape>
    </item>
    <item 
       android:state_selected="true"
       android:state_pressed="false">
         <shape>
          <gradient
              android:startColor="#eb7b88"
              android:endColor="#d15b69"
              android:angle="270" />
        </shape>
    </item>   
</selector>

